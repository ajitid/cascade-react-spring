{
  "name": "cascade",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start:cra": "react-scripts start",
    "start:tw": "postcss ./src/styles/tailwind-for-postcss.css -o ./src/styles/tailwind.css -w",
    "start": "concurrently \"npm:start:*\"",
    "build:tw": "postcss ./src/styles/tailwind-for-postcss.css -o ./src/styles/tailwind.css --env production",
    "build:cra": "react-scripts build",
    "build": "npm run build:tw & npm run build:cra",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "format": "prettier --write src/**/*.ts src/**/*.tsx src/**/*.css src/**/*.json",
    "test": "react-scripts test",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "history": "^5.0.0",
    "nanoid": "^3.1.12",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-feather": "^2.0.8",
    "react-router-dom": "^6.0.0-beta.0",
    "react-spring": "^9.0.0-rc.3",
    "react-use-measure": "^2.0.2",
    "simplebar-react": "^2.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "concurrently": "^5.3.0",
    "eslint-config-prettier": "^6.13.0",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "react-scripts": "3.4.3",
    "source-map-explorer": "^2.5.0",
    "tailwindcss": "^1.9.5",
    "typescript": "~3.7.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
